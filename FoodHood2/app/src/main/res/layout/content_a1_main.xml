<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.adhood.foodhood2.A1_main"
    android:weightSum="1"
    android:background="@android:color/transparent">

    <kr.adhood.foodhood2.ScalableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:padding="0dp"
        android:id="@+id/a1_cont_name"
        sl:scale_base_width="400"
        sl:scale_base_height="45"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왕십리스테이크"
            android:id="@+id/a1_id"
            android:textStyle="bold"
            sl:scale_left="10"
            sl:scale_top="10"
            sl:scale_width="150"
            sl:scale_height="30"
            sl:scale_textsize="20"
            android:layout_gravity="top|center_vertical"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300m"
            android:id="@+id/a1_dist"
            sl:scale_left="330"
            sl:scale_top="15"
            sl:scale_width="70"
            sl:scale_height="20"
            sl:scale_textsize="16"
            android:textColor="#000000" />
    </kr.adhood.foodhood2.ScalableLayout>

    <kr.adhood.foodhood2.ScalableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/a1_cont_video"
        android:layout_below="@id/a1_cont_name"
        sl:scale_base_width="400"
        sl:scale_base_height="330"
        android:background="@android:color/black"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:id="@+id/a1_video"
            sl:scale_left="0"
            sl:scale_top="5"
            sl:scale_width="400"
            sl:scale_height="300"/>

    </kr.adhood.foodhood2.ScalableLayout>

    <kr.adhood.foodhood2.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/a1_cont_stat"
        android:layout_below="@id/a1_cont_video"
        sl:scale_base_width="400"
        sl:scale_base_height="60">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:id="@+id/a1_nice"
            android:clickable="true"
            android:src="@drawable/nice"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="centerCrop"
            sl:scale_left="10"
            sl:scale_top="0"
            sl:scale_width="50"
            sl:scale_height="60"/>

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:id="@+id/a1_loop"
            android:src="@drawable/loop"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            sl:scale_left="75"
            sl:scale_top="0"
            sl:scale_width="50"
            sl:scale_height="60"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="808"
            android:id="@+id/a1_loopnum"
            android:layout_gravity="bottom"
            sl:scale_left="115"
            sl:scale_top="40"
            sl:scale_width="20"
            sl:scale_height="20"
            sl:scale_textsize="12"
            android:textColor="#625f5f" />


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/a1_coupon"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            sl:scale_left="155"
            sl:scale_top="0"
            sl:scale_width="50"
            sl:scale_height="60"/>


        <ImageButton
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:id="@+id/a1_info"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:src="@drawable/storeinfo"
            android:scaleType="centerCrop"
            sl:scale_left="250"
            sl:scale_top="0"
            sl:scale_width="75"
            sl:scale_height="60" />


        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/a1_other"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/more"
            sl:scale_left="330"
            sl:scale_top="0"
            sl:scale_width="50"
            sl:scale_height="60"/>

    </kr.adhood.foodhood2.ScalableLayout>

</RelativeLayout>
